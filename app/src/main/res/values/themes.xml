<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="AppTheme">
        <attr name="main_background_color" format="color" />
        <attr name="main_foreground_color" format="color" />
        <attr name="inverse_bg_color" format="color" />
        <attr name="inverse_action_bar_color" format="color" />
        <attr name="new_background" format="reference" />
        <attr name="rounded_background" format="reference" />
        <attr name="settings_theme" format="reference" />
        <attr name="alert_dialog_nobg_theme" format="reference" />
    </declare-styleable>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
        <item name="inverse_bg_color">#fff</item>
        <item name="inverse_action_bar_color">@color/abc_primary_text_material_dark</item>
        <item name="main_foreground_color">@color/primary_material_dark</item>
        <item name="main_background_color">@color/background_material_dark</item>
        <item name="new_background">@drawable/new_background_dark</item>
        <item name="rounded_background">@drawable/rounded_background_dark</item>
        <item name="settings_theme">@style/SettingsThemeDark</item>
        <item name="alert_dialog_nobg_theme">@style/Theme.AppCompat.Dialog.Alert.NoBG</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
        <item name="inverse_bg_color">#111</item>
        <item name="inverse_action_bar_color">@color/abc_primary_text_material_dark</item>
        <item name="main_foreground_color">@color/primary_material_light</item>
        <item name="main_background_color">@color/background_material_light</item>
        <item name="new_background">@drawable/new_background_light</item>
        <item name="rounded_background">@drawable/rounded_background_light</item>
        <item name="settings_theme">@style/SettingsThemeLight</item>
        <item name="alert_dialog_nobg_theme">@style/Theme.AppCompat.Light.Dialog.Alert.NoBG</item>
    </style>

    <style name="AppThemeDark.Green">
        <item name="colorPrimary">#42787e</item>
        <item name="colorPrimaryDark">#37686e</item>
    </style>

    <style name="AppThemeLight.Rariteh">
        <item name="colorPrimary">#5e50a1</item>
        <item name="colorPrimaryDark">#4c4589</item>
    </style>

    <style name="Theme.AppCompat.Dialog.Alert.NoBG">
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="Theme.AppCompat.Light.Dialog.Alert.NoBG">
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <string-array name="theme_names">
        <item>Светлая</item>
        <item>Тёмная</item>
        <item>Зелёная</item>
        <item>Зефирка</item>
    </string-array>

    <string-array name="theme_values">
        <item>AppThemeLight</item>
        <item>AppThemeDark</item>
        <item>AppThemeDark.Green</item>
        <item>AppThemeLight.Rariteh</item>
    </string-array>

    <style name="SettingsThemeDark" parent="android:Theme" />

    <style name="SettingsThemeLight" parent="android:Theme.Light" />

</resources>