<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="collapseOffset" format="dimension"/>

    <declare-styleable name="AppTheme">
        <attr name="main_background_color" format="color" />
        <attr name="main_foreground_color" format="color" />
        <attr name="new_background" format="reference" />
        <attr name="rounded_background" format="reference" />
        <attr name="settings_theme" format="reference" />
    </declare-styleable>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="main_foreground_color">@color/primary_material_dark</item>
        <item name="main_background_color">@color/background_material_dark</item>
        <item name="new_background">@drawable/new_background_dark</item>
        <item name="rounded_background">@drawable/rounded_background_dark</item>
        <item name="settings_theme">@style/SettingsThemeDark</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="main_foreground_color">@color/primary_material_light</item>
        <item name="main_background_color">@color/background_material_light</item>
        <item name="new_background">@drawable/new_background_light</item>
        <item name="rounded_background">@drawable/rounded_background_light</item>
        <item name="settings_theme">@style/SettingsThemeLight</item>
    </style>

    <style name="SettingsThemeDark" parent="android:Theme.DeviceDefault" tools:targetApi="ice_cream_sandwich" />
    <style name="SettingsThemeLight" parent="android:Theme.DeviceDefault.Light" tools:targetApi="ice_cream_sandwich" />

    <drawable name="quote_background">#f445</drawable>

</resources>
