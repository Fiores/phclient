<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/editor_root"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:behavior_hideable="true"
        android:layout_marginRight="72dp"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="ru.ponyhawks.android.utils.NestedSliderBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editor_window"
            android:layout_gravity="top"
            android:padding="4dp"
            android:background="?attr/rounded_background"
            app:elevation="6dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:alpha="0"
                android:layout_below="@+id/text"

                android:id="@+id/instruments_scroll">
                <LinearLayout
                    android:id="@+id/instruments"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/send"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:tint="?attr/editTextColor"
                android:src="@drawable/ic_send" />

            <EditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="42dp"
                android:textSize="14sp"/>
        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:gravity="center"
        android:layout_margin="3dp"
        android:id="@+id/colorful_button"
        />

</android.support.design.widget.CoordinatorLayout>