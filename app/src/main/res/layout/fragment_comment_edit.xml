<ru.ponyhawks.android.utils.IgnorantCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ponyhawks.android.fragments.CommentEditFragment">

    <!--<View-->
    <!--android:id="@+id/scrim"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/commentFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-52dp"
        android:animateLayoutChanges="true"
        android:background="?attr/rounded_background"
        android:clickable="true"
        android:elevation="8dp"

        app:collapseOffset="52dp"
        app:layout_behavior="ru.ponyhawks.android.utils.HideablePartBehavior"
        tools:ignore="UnusedAttribute,RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:text="> cab404"
            android:textAppearance="?android:textAppearance" />


        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/target"
            android:layout_toLeftOf="@+id/send"
            android:elevation="28dp"
            android:gravity="top|left"
            android:inputType="textLongMessage"
            android:nestedScrollingEnabled="true"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/send"
            style="@style/EditIconPadded"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignBottom="@+id/text"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/ic_send"
            android:tint="?attr/inverse_bg_color" />

        <LinearLayout
            android:id="@+id/instruments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                style="@style/EditIconPadded"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_image"
                android:tint="?attr/inverse_bg_color" />

            <ImageView
                android:id="@+id/link"
                style="@style/EditIconPadded"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_link"
                android:tint="?attr/inverse_bg_color" />

            <ImageView
                android:id="@+id/palette"
                style="@style/EditIconPadded"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_palette"
                android:tint="?attr/inverse_bg_color" />
        </LinearLayout>
    </RelativeLayout>

</ru.ponyhawks.android.utils.IgnorantCoordinatorLayout>
