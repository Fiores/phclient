<ru.ponyhawks.android.utils.IgnorantCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    tools:context="ru.ponyhawks.android.fragments.CommentEditFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/commentFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-52dp"
        android:animateLayoutChanges="true"
        android:background="?attr/rounded_background"
        android:clickable="true"
        app:layout_behavior="ru.ponyhawks.android.utils.HideablePartBehavior"
        tools:ignore="UnusedAttribute,RtlHardcoded,RtlSymmetry">

            <TextView
                android:id="@+id/target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:text="> cab404"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_alignParentTop="true" />


            <EditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:gravity="top|left"
                android:layout_height="wrap_content"
                android:layout_below="@+id/target"
                android:singleLine="true"
                android:nestedScrollingEnabled="true"
                android:inputType="textLongMessage"
                android:layout_toLeftOf="@+id/send"
                />

            <ImageView
                android:id="@+id/send"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:clickable="true"
                android:src="@drawable/ic_send"
                android:layout_alignBottom="@+id/text"
                android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/instruments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/text">

            <ImageView
                android:id="@+id/image"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_image" />

            <ImageView
                android:id="@+id/link"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_link" />

            <ImageView
                android:id="@+id/palette"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_palette" />
        </LinearLayout>
    </RelativeLayout>

</ru.ponyhawks.android.utils.IgnorantCoordinatorLayout>
